<div class="row">	
	<div class="col s12	">
		<h1>Create an Account</h1>
		<small>All fields are required</small>
	</div>
	<%= form_for @parent do |f| %>
	<div class="input-field col s12">
		<%= f.label :email, "Email Address" %>
		<%= f.email_field :email, placeholder: "example@email.com", autofocus: true %>
	</div>
	<div class="input-field col s12">
		<%= f.label :parent_first_name, "First Name" %>
		<%= f.text_field :parent_first_name %>
	</div>
	<div class="input-field col s12">
		<%= f.label :parent_last_name, "Last Name" %>
		<%= f.text_field :parent_last_name %>
	</div>
	<div class="input-field col s12">
		<%= f.label :password, "Password" %>
		<%= f.password_field :password %>
	</div>
	<div class="input-field col s12">
		<%= f.submit "Create Account", class: "waves-effect waves-light btn" %>
	</div>
	<% end %>
</div>
