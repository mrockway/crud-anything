<div class="row">
	<div class="col s12">
		<h4>Edit <%= @child.child_first_name %>'s memory</h4>
		<%= form_for @memory do |f| %>
		<div class="input-field col s12">
			<%= f.label :memory_date, "Date" %>
			<br>
			<%= f.date_field :memory_date%>
		</div>
		<div class="input-field col s12">
			<%= f.label :memory_description, "Description"  %>
			<%= f.text_area :memory_description%>
		</div>
			<%= f.hidden_field :child_id, value: @child.id %>
		<div class="input-field col s12">
			<%= f.submit "Save Memory", class: "waves-effect waves-light btn" %>
		</div>
		<% end %>
	</div>
</div>