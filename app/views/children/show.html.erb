<div class="row">
	<div class="col s12">
		<h1><%= current_child.child_first_name %> <%= current_child.child_last_name %></h1>
		<button class="addNewMemory waves-effect waves-light btn">Add Memory</button>
		<button class= "waves-effect waves-light btn"><%= link_to "Edit #{current_child.child_first_name}'s information", edit_child_path(current_child.id) %></button>
		<div class="child_memories">
			<p>Birthday: <%= current_child.birthday.strftime("%B %d, %Y") %></p>
			<% current_child.memories.each do |memory| %>
			<p>Date: <%= memory.memory_date.strftime("%B %d, %Y") %></p>
			<p>Memory: <%= memory.memory_description %></p>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="newMemory col s12">
			<h4>Add a new memory for <%= current_child.child_first_name %></h4>
			<%= form_for :memory, url: "/memories", method: :post do |f| %>
			<div class="input-field col s12">
				<%= f.label :memory_date, "Date of Milestone or Memory"  %>
				<br>
				<%= f.date_field :memory_date%>
			</div>
			<div class="input-field col s12">
				<%= f.label :memory_description, "Description" %>
				<%= f.text_area :memory_description%>
			</div>
			<h5>Would you like to be reminded of this milestone later?</h5>
			<div class="input-field col s12">
			<%= f.check_box :send_email, class: "with-gap" %>
			<%= f.label :send_email, "Send Email" %>
			</div>
			<div class="input-field col s12">
				<%= f.label :send_date, "Date you would like to be reminded" %>
				<br>
				<%= f.date_field :send_date%>
			</div>
			<div class="hidden">
				<%= f.hidden_field :child_id, value: @child.id %>
			</div>	
			<div class="input-field col s12">
				<button class="waves-effect waves-light btn"><%= f.submit "Add Memory" %></button>
			</div>	
			<% end %>	
		</div>
	</div>
</div>
